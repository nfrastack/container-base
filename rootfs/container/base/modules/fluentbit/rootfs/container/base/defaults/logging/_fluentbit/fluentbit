set_env FLUENTBIT_FORWARD_BUFFER_CHUNK_SIZE="1M" nfrastack/base
set_env FLUENTBIT_FORWARD_BUFFER_MAX_SIZE="6M" nfrastack/base
set_env FLUENTBIT_GRACE_SECONDS="1" nfrastack/base
