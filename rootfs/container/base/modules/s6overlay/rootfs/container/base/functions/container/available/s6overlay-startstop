service_start() {
    if [ -d /container/base/run/"${1}" ] ; then
        ln -sf /container/run/"${1}" /etc/services.d/
    elif [ -d /container/run/"${1}" ] ; then
        ln -sf /container/run/"${1}" /etc/services.d/
    fi
}

service_stop() {
    mkdir -p /container/state/init/
    echo "DONOTSTART added by $(basename \"$0\")" | tee -a -- /container/state/init/"${1}" >/dev/null 2>&1
}
