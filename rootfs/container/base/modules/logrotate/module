LOGROTATE_BINARY=/usr/sbin/logrotate

LOGROTATE_ASSETS=" \
                    /container/base/defaults/logging/logrotate \
                    /container/base/functions/logging/logrotate \
                    /container/logrotate \
                    /etc/logrotate.conf \
                    /etc/logrotate.d \
                    /etc/periodic/faily/logrotate \
                    /usr/sbin/logrotate \
                "

dependencies() {
    case "$(container_info distro)" in
        alpine )
            LOGROTATE_RUN_DEPS_ALPINE=" 	\
                                            logrotate \
                                      "
        ;;
        debian )
            LOGROTATE_RUN_DEPS_DEBIAN=" \
                                            logrotate \
                                      "
        ;;
    esac
}

install() {
    set -e
    if [ ! -f "${LOGROTATE_BINARY}" ] || var_true "${CONTAINER_MODULE_REINSTALL}" ; then
        dependencies
        package update
        package install \
                        LOGROTATE_RUN_DEPS

        mkdir -p /etc/logrotate.d

        if [ -d "$(dirname "$0")"/rootfs ]; then
            cp -aR "$(dirname "$0")"/rootfs/* /
        fi

        container_build_log add logrotate "$(logrotate -V | head -n1 | awk '{print $2" "$3}')" repositories
    fi
}

remove() {
    if [ -f "${LOGROTATE_BINARY}" ]; then
        dependencies

        package remove \
                        LOGROTATE_RUN_DEPS

        rm -rf ${LOGROTATE_ASSETS}

        container_build_log remove logrotate
    fi
}

source /container/base/functions/container/build
set -e
$@