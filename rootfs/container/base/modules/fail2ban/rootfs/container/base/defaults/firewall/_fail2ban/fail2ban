set_env FAIL2BAN_BACKEND="AUTO" nfrastack/base
set_env FAIL2BAN_BINARY="fail2ban-server" nfrastack/base
set_env FAIL2BAN_CONFIG_PATH="/etc/fail2ban/" nfrastack/base
set_env FAIL2BAN_DB_FILE="fail2ban.sqlite3" nfrastack/base
set_env FAIL2BAN_DB_PATH="/var/lib/fail2ban/" nfrastack/base
set_env FAIL2BAN_DB_PURGE_AGE="86400" nfrastack/base
set_env FAIL2BAN_DB_TYPE="MEMORY" nfrastack/base
set_env FAIL2BAN_IGNORE_IP="127.0.0.1/8 ::1 172.16.0.0/12 192.168.0.0/24" nfrastack/base
set_env FAIL2BAN_IGNORE_SELF="TRUE" nfrastack/base
set_env FAIL2BAN_LOG_PATH="/var/log/fail2ban/" nfrastack/base
set_env FAIL2BAN_LOG_FILE="fail2ban.log" nfrastack/base
set_env FAIL2BAN_LOG_LEVEL="INFO" nfrastack/base
set_env FAIL2BAN_LOG_TYPE="FILE" nfrastack/base
set_env FAIL2BAN_MAX_RETRY="5" nfrastack/base
set_env FAIL2BAN_STARTUP_DELAY="15" nfrastack/base
set_env FAIL2BAN_TIME_BAN="10m" nfrastack/base
set_env FAIL2BAN_TIME_FIND="10m" nfrastack/base
