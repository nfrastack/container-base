if [ "${CONTAINER_ENABLE_MONITORING,,}" = "true" ]; then
    if [ -f "/container/base/functions/monitoring/${CONTAINER_MONITORING_BACKEND,,}" ]; then
        source /container/base/functions/monitoring/"${CONTAINER_MONITORING_BACKEND,,}"
    fi
fi