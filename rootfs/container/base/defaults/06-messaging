if [ "${CONTAINER_ENABLE_MESSAGING,,}" = "true" ]; then
    if [ -f "/container/base/defaults/messaging/${CONTAINER_MESSAGING_BACKEND,,}" ]; then
        source /container/base/defaults/messaging/"${CONTAINER_MESSAGING_BACKEND,,}"
    fi
fi
