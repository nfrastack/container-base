CONTAINER_SECRETS_BACKEND=${CONTAINER_SECRETS_BACKEND:-"openbao"}

case "${CONTAINER_SECRETS_BACKEND}" in
    bao )
        CONTAINER_SECRETS_BACKEND=openbao
    ;;
    vault )
        CONTAINER_SECRETS_BACKEND=openbao
    ;;
esac

